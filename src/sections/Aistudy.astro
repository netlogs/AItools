---
import SectionTitle from "@/components/SectionTitle.astro";
import type {
ServicesData
} from "@/config/landing.interface";

interface Props {
  data: ServicesData;
}

const { data } = Astro.props;
---

<section id="aistudy-section" class="flex flex-col mb-60 gap-y-28">
  <SectionTitle>
    {data.title}
  </SectionTitle>
  
  <div class="grid md:grid-cols-2 gap-y-10 justify-items-center">
    {
      data.services.map((service) => (
	  <article class="flex gap-x-6 md:gap-x-12 md:w-[550px]">
		<div class="ml-20">
		
		</div>
		<section class="ml-1">
		<h3 class="text-xl font-medium md:text-2xl mb-1  text-blue-500">
		  <a target="_blank" href={service.href}>{service.title}</a>
		</h3>
		<p class="text-pretty opacity-90 md:text-lg">
		  {service.description}
		</p>
		</section>
	  </article>
      ))
    }
  </div>
</section>
